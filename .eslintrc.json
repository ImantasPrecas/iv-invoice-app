{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "spellcheck"],
    "rules": {
        "no-console": "warn",
        "@typescript-eslint/no-explicit-any": "off",
        "spellcheck/spell-checker": [
            "warn",
            {
                "minLength": 3,
                "skipWords": ["dotenv", "req"]
            }
        ]
    }
}
